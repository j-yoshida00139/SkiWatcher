<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <TextView
        android:text="総時間："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="最高速度："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/speedLabel"
        android:layout_below="@+id/timeLabel"
        android:layout_alignLeft="@+id/timeLabel"
        android:layout_alignStart="@+id/timeLabel" />

    <TextView
        android:text="転倒回数："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/fallLabel"
        android:layout_below="@+id/speedLabel"
        android:layout_alignLeft="@+id/speedLabel"
        android:layout_alignStart="@+id/speedLabel" />

    <TextView
        android:text="0 時間 0 分 0 秒"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeValue"
        android:layout_above="@+id/speedLabel"
        android:layout_toRightOf="@+id/speedLabel"
        android:layout_toEndOf="@+id/speedLabel" />

    <TextView
        android:text="0 km/h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/speedValue"
        android:layout_above="@+id/fallLabel"
        android:layout_toRightOf="@+id/speedLabel"
        android:layout_toEndOf="@+id/speedLabel" />

    <TextView
        android:text="0 回"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fallValue"
        android:layout_alignTop="@+id/fallLabel"
        android:layout_toRightOf="@+id/fallLabel"
        android:layout_toEndOf="@+id/fallLabel" />

    <TextView
        android:text="傾きセンサー使用"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/infoLabel"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/fallValue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START!!"
        android:id="@+id/runButton"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/infoLabel"
        android:layout_alignRight="@+id/infoLabel"
        android:layout_alignEnd="@+id/infoLabel" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:id="@+id/resetButton"
        android:layout_alignTop="@+id/runButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="39dp"
        android:layout_marginEnd="39dp" />

